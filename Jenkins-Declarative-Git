currentBuild.displayName = "online-shopping-#"+currentBuild.number

pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'github', url: 'https://github.com/madhu091995-1/myweb.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat-new']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/myweb.war  ec2-user@54.81.208.45:/opt/tomcat9.0.62/webapps/
                    
                    ssh ec2-user@54.81.208.45 /opt/tomcat8/bin/shutdown.sh
                    
                    ssh ec2-user@54.81.208.45 /opt/tomcat8/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
